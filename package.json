{
  "name": "@alshdavid/html-lexer",
  "version": "0.0.5",
  "description": "An HTML5 lexer",
  "type": "module",
  "scripts": {
    "build": "npm run check-js && npm run build-types",
    "check-js": "npx tsc -p tsconfig.json",
    "build-types": "npm run clean && npx tsc -p ./.github/tsconfig.build.json",
    "clean": "node -e \"const fs = require('node:fs'); const p = require('node:path'); fs.existsSync(p.join(__dirname, 'types')) && fs.rmSync(p.join(__dirname, 'types'), { recursive: true })\"",
    "format": "npx prettier --write ./lib/**/* ./tests/**/*.mjs ./tests/**/*.html --list-different",
    "test": "node ./tests/tests.mjs"
  },
  "exports": {
    ".": [
      {
        "import": "./lib/index.mjs",
        "types": "./types/index.d.mts"
      }
    ],
    "./legacy": [
      {
        "import": "./lib/legacy/index.mjs",
        "types": "./types/legacy/index.d.mts"
      }
    ]
  },
  "keywords": [
    "html5",
    "compliant",
    "html",
    "lexer",
    "tokeniser",
    "tokenizer",
    "parser",
    "start-tag",
    "end-tag",
    "element",
    "attribute",
    "attribute-name",
    "attribute-value"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alshdavid/html-lexer.git"
  },
  "license": "MIT",
  "files": [
    "lib",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^20.4.2",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
